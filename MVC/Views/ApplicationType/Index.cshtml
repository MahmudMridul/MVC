@model IEnumerable<MVC.Models.ApplicationType>

<div class="container p-3">

    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>

    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (ApplicationType applicationType in Model)
                {
                    <tr>

                        <td width="50%">
                            @applicationType.Id
                        </td>
                        <td width="30%">
                            @applicationType.Name
                        </td>
                        <td></td>

                    </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <p> No Data Found! </p>
    }

</div>